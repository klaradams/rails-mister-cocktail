<div class="form_container">
  <h1> Edit Dose: </h1>

  <%= form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>

    <%= f.label :ingredient %>
    <%= f.collection_select(:ingredient_id, Ingredient.all, :id, :name) %>
  </div>

    <%= f.submit %>
  <% end %>
</div>
